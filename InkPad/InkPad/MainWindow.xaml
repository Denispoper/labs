<Window x:Name="InkPad" x:Class="InkPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkPad"
        mc:Ignorable="d"
        Title="InkPad" Height="549" Width="370" Background="LightGray">
	<Grid>
		<InkCanvas x:Name="inkCanvas1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightYellow">
		</InkCanvas>
		<Button x:Name="button1" Content="Clear" HorizontalAlignment="Left" Margin="0,455,0,0" VerticalAlignment="Top" Width="180" Height="64" Click="button1_Click"/>
		<Button x:Name="button2" Content="Close" HorizontalAlignment="Left" Margin="185,455,0,0" VerticalAlignment="Top" Width="178" Height="64" Click="button2_Click"/>

	</Grid>
</Window>
