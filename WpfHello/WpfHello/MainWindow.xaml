<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Canvas>
		<Button x:Name="setName" Content="Set name" HorizontalAlignment="Left" Margin="80,44,0,0" VerticalAlignment="Top" Click="Button_Click"/>
		<Button x:Name="returnName" Content="Ret Name" HorizontalAlignment="Left" Margin="80,84,0,0" VerticalAlignment="Top" Click="returnNameButton"/>
		<Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="140,81,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="140,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged"/>
		<Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click" />
		<TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
	</Canvas>
</Window>
