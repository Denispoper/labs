<Window x:Class="UserIn1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserIn1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<TextBox x:Name="txtLastName" HorizontalAlignment="Left" Margin="145,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="145,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Margin="145,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Label x:Name="label1" Content="_First Name" HorizontalAlignment="Left" Margin="62,57,0,0" VerticalAlignment="Top" Target="{Binding ElementName=txtFirstName}"/>
		<Label x:Name="label2" Content="_Last Name" HorizontalAlignment="Left" Margin="62,95,0,0" VerticalAlignment="Top" Target="{Binding ElementName=txtLastName}" />
		<Label x:Name="label3" Content="_Email" HorizontalAlignment="Left" Margin="62,135,0,0" VerticalAlignment="Top" Target="{Binding ElementName=txtEmail}" />
		<Button Content="_Submit" HorizontalAlignment="Left" Margin="275,184,0,0" VerticalAlignment="Top" Click="Button_Click"/>

	</Grid>
</Window>
